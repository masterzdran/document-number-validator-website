@page "/validator/nif-generator"

@inject IStringLocalizer<Resources> Loc

<div class="card" style="width: 35rem;">
  <div class="card-body">
    <h5 class="card-title">        
        @if(String.IsNullOrEmpty(Title))
        {
            @Loc["TITLE"]
        }
        else
        {
            @Title
        }
    </h5>

        <fieldset>      
          <div>
            <label class="validator-lable" for="Nif"><strong>@Loc["NIF_LABEL"]</strong></label> &nbsp; &nbsp;
            <select @bind="StartWithNumber">
                <option selected disabled value="-1">Select a wich startup number</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="8">8</option>
                <option value="45">45</option>
                <option value="70">70</option>
                <option value="71">71</option>
                <option value="72">72</option>
                <option value="77">77</option>
                <option value="78">78</option>
                <option value="79">79</option>
                <option value="90">90</option>
                <option value="98">98</option>
                <option value="99">99</option>
            </select>
            <input class="validator-input" type="text" @bind="Nif" placeholder="Click to Generate" readonly/>
            <button @onclick="GenerateRandomDocumentNumber">@Loc["BUTTON_LABEL"]</button>
          </div>
          <div>
              <small>More library usage examples <a 
                  target="_blank" 
                  href="https://github.com/masterzdran/document-number-validator/blob/develop/tests/Portugal.Nif.Validator.Tests/NifValidatorTests.cs"
              >here</a>
          </small>
          </div>
     </fieldset>
  </div>
</div>