<Router AppAssembly="@typeof(App).Assembly"
AdditionalAssemblies="new[] { 
typeof(NifValidatorComponent.NifValidatorModule).Assembly,
typeof(NissValidatorComponent.NissValidatorModule).Assembly,
typeof(CCValidatorComponent.CCValidatorModule).Assembly,
typeof(IBANValidatorComponent.IBANValidatorModule).Assembly,
}"
>

    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
